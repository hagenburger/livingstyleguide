!!!html5
%html
  = partial "layouts/head"
  %body.layout(class="#{"-subpage-" unless data.page.root}")
    .layout--container
      = partial "layouts/header"
      .layout--content
        %h1.blog--headline= data.page.title
        .markdown
          = yield.gsub(%r(\A.*<body class="livingstyleguide">(.+)</body>.*\Z)m, '\\1')
        .social-buttons
          .social-buttons--item
            .fb-like(data-action="like" data-href="#{current_url}" data-layout="box_count" data-share="false")
          .social-buttons--item
            %a(href="Tweet" class="twitter-share-button" data-count="vertical" data-related="livingstyleguide" data-text="#{data.page.title}â€”LivingStyleGuide" data-url="#{current_url}") https://twitter.com/share
          .social-buttons--item
            .g-plusone(data-size="tall")
      = partial "layouts/footer"
